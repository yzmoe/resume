/*设置公共样式*/
*
  box-sizing: border-box
body
  font-size: 12px
  font-family: "Roboto Slab", "Helvetica Neue", Helvetica, Arial, sans-serif
a
  text-decoration: none
ul
  padding: 0
  list-style: none
.container
  width: 90%
  margin: 0 auto

/*导航条开始*/
header
  background-color: #222
  position: fixed
  top: 0
  left: 0
  right: 0
  z-index: 100
  .container
    display: flex
    height: 40px
    justify-content: space-between
    align-items: center
    h1
      color: #fed136
    nav
      position: absolute
      top: 40px
      left: 0
      border-top: 1px solid rgba(0, 0, 0, 0.8)
      background: #222
      padding: 0 5%
      width:100%
      height: 160px
      display: none
      a
        display: block
        height: 40px
        line-height: 40px
        font-size: 14px
        text-decoration: none
        color: #fff
    span
      display: block
      color: #fed136
      font-size: 18px
/*导航结束*/


/*信息区开始*/
.info
  position: relative
  .img
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    background-image: url(../img/1.jpg)
    background-size: cover
    z-index: -2
  .cover
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    z-index: -1
    background-color: rgba(0, 0, 0, 0.7)
  .container
    display: flex
    flex-direction: column
    justify-content: center
    color: #fff
/*信息区结束*/


/*作品展示区开始*/
.portfolio
  background-color: #f7f7f7
  .container
    display: flex
    flex-direction: column
    hgroup
      margin-top: 40px
      text-align: center
      h3
        font-size: 16px
        font-weight: 200
        font-style: italic
    .portfolio-list
      display: flex
      flex-wrap: wrap
      justify-content: space-around
      flex-grow: 1
      .portfolio-item
        flex-basis:300px
        margin-top:30px
        a
          display: block
          color: #000
          box-shadow: 0 2px 3px 0 #ddd
          .img
            width: 100%
            height: 220px
            background-size:cover
            background-position:center center
          .desc
            padding: 14px
            background: rgba(255, 255, 255, .95)
            transition: all 1s
            h3
              margin: 0
        &:nth-child(1)
          .img
            background-image:url('../img/portfolio1.png')
        &:nth-child(2)
          .img
            background-image:url('../img/portfolio2.png')
        &:nth-child(3)
          .img
            background-image:url('../img/portfolio3.png')
        &:nth-child(4)
          .img
            background-image:url('../img/portfolio4.png')
        &:nth-child(5)
          .img
            background-image:url('../img/portfolio5.png')
        &:nth-child(6)
          .img
            background-image:url('../img/portfolio6.png')
/*作品展示区结束*/


/*技能展示区开始*/
.skill
  .container
    display: flex
    flex-direction: column
    hgroup
      margin-top: 40px
      text-align: center
      h3
        font-size: 16px
        font-weight: 200
        font-style: italic
    .skill-list
      flex-wrap: wrap
      justify-content: space-around
      .skill-item
        text-align: center
        padding: 30px
        span
          font-size: 80px
        .text
          text-align: left
          font-size: 18px
/*技能展示区结束*/


/*联系区开始*/
.contact
  background-color: #f7f7f7
  .container
    display: flex
    flex-direction: column
    hgroup
      margin-top: 8vh
      text-align: center
      h3
        font-size: 16px
        font-weight: 200
        font-style: italic
    .contact-list
      flex-grow: 1
      display: flex
      flex-wrap: wrap
      justify-content: center
      align-items: center
      position: relative
      .contact-item
        span
          display: block
          width: 100px
          height: 100px
          border-radius: 50%
          font-size: 70px
          background-color: #64c5d6
          text-align: center
          line-height: 100px
          margin: 20px
          color: #fff
          position: relative
          .cover
            position: absolute
            top: 0
            right: 0
            bottom: 0
            left: 0
            border-radius: 100%
            background-color: rgba(0, 0, 0, 0.15)
            transition: all .5s
          &.icon-book
            background-color: #e7ab99
          &.icon-github
            color: #000
            background-color: #dfdfdf
          &.icon-wechat
            background-color: #62b900
          &.icon-QQ
            background-color: #4da7de
          &.icon-phone
            background-color: #30c68b
      .item-email
        display:none
      img
        width: 150px
        height: 150px
        position: absolute
        left: 50%
        top: 0px
        margin-left: -75px
        opacity:0
        transition:all 0.8s
        transform:translateY(-50px)
        &.active
          opacity:1
          transform:translateY(0)

/*联系区结束*/
